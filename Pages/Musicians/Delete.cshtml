@page "{id:int}"

@model MusicApp.Pages.Musicians.DeleteModel

@{
    ViewData["Title"] = "Delete Band";
}

<h1>@ViewData["Title"]</h1>
<h2>@Model.Musician.Name</h2>

<form method="post">
    <p>Are you sure you want to delete this musician from the database??</p>
    <button type="submit">Delete</button>
    <a asp-page="./Index">Cancel</a>
</form>