@page
@model MusicApp.Pages.Musicians.CreateModel
@{
    ViewData["Title"] = "Add Musician";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <table>
        <tbody>
            <tr>
                <th><label asp-for="Musician.Name">@Html.DisplayNameFor(m => m.Musician.Name)</label></th>
                <td><input asp-for="Musician.Name"></td>
                <td><span asp-validation-for="Musician.Name"></span></td>
            </tr>
            <tr>
                <th><label asp-for="Musician.BirthDay">@Html.DisplayNameFor(m => m.Musician.BirthDay)</label></th>
                <td><input type="date" asp-for="Musician.BirthDay"></td>
                <td><span asp-validation-for="Musician.BirthDay"></span></td>
            </tr>
            <tr>
                <th><label asp-for="Musician.Country">@Html.DisplayNameFor(m => m.Musician.Country)</label></th>
                <td><input asp-for="Musician.Country"></td>
                <td><span asp-validation-for="Musician.Country"></span></td>
            </tr>
            <tr>
                <th><label asp-for="Musician.Band">@Html.DisplayNameFor(m => m.Musician.Band)</label></th>
                <td>
                    <select name="selectedBand">
                        @foreach (var band in Model.BandNames)
                        {
                            <option value="@band">@band</option>
                        }
                    </select>
                </td>
                <td><span asp-validation-for="Musician.Band"></span></td>
            </tr>
        </tbody>
    </table>
    <button type="submit">Add Musician</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}